#include <Arduino.h>

#define trig 5
#define echo 6
#define buzzer1 9
#define buzzer2 13
#define led 11
#define som A0

long duracao_pulso;
int distancia_cm;
int barulho;

void setup() {
  pinMode(trig, OUTPUT);
  pinMode(buzzer1, OUTPUT);
  pinMode(buzzer2, OUTPUT);
  pinMode(led, OUTPUT);

  pinMode(echo, INPUT);
  pinMode(som, INPUT);

  Serial.begin(9600);
  Serial.println("=== Sistema Iniciado ===");
}

void Alarme() {
  for (int i = 0; i < 50; i++) {
    digitalWrite(buzzer1, HIGH);
    digitalWrite(buzzer2, HIGH);
    delay(50);
    digitalWrite(buzzer1, LOW);
    digitalWrite(buzzer2, LOW);
    delay(50);
  }
}

void medeDistancia() {
  digitalWrite(trig, LOW);
  delayMicroseconds(2);
  digitalWrite(trig, HIGH);
  delayMicroseconds(10);
  digitalWrite(trig, LOW);

  duracao_pulso = pulseIn(echo, HIGH);
  distancia_cm = duracao_pulso * 0.034 / 2;

  if (distancia_cm < 2 || distancia_cm > 400) {
    distancia_cm = 0;
  }
}

bool alertaDeObstaculo() {
  if (distancia_cm > 0 && distancia_cm <= 30) {
    int tempo_bipe = map(distancia_cm, 1, 30, 50, 300);

    digitalWrite(buzzer1, HIGH);
    digitalWrite(buzzer2, HIGH);
    delay(50);
    digitalWrite(buzzer1, LOW);
    digitalWrite(buzzer2, LOW);
    delay(tempo_bipe);

    return true;
  }
  return false;
}

void VerificaBarulho() {
  barulho = analogRead(som);

  if (barulho >= 70) {
    digitalWrite(led, HIGH);
    delay(5000);
    digitalWrite(led, LOW);
  } else if (barulho >= 50 && barulho <= 69) {
    Alarme();
  }
}

void loop() {
  medeDistancia();

  Serial.print("Distancia: ");
  Serial.print(distancia_cm);
  Serial.print(" cm | Intensidade do Barulho: ");
  Serial.println(analogRead(som));

  if (!alertaDeObstaculo()) {
    VerificaBarulho();
  }

  delay(100);
}
